<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dailyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:text="testing alot of text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dailyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dailyName"
        android:text="testing alot of texttesting alot of text"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/dailyRequirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dailyDescription"
        android:layout_marginTop="11dp"
        android:text="testing alot of texttesting alot of texttesting alot of texttesting alot of texttesting alot of texttesting alot of texttesting alot of texttesting alot of texttesting alot of text"
        android:textSize="13sp" />
</RelativeLayout>
